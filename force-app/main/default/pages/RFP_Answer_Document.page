<apex:page controller="RFPDocumentController"
           contentType="application/msword#{!documentFileName}.doc"
           showHeader="false"
           sidebar="false"
           cache="true"
           action="{!init}">

    <apex:outputPanel rendered="{!isDownload}">
        <html xmlns:w="urn:schemas-microsoft-com:office:word">
        <head>
            <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
            <title>RFP Response: {!rfpName}</title>
            <style>
                body {
                    font-family: 'Calibri', sans-serif;
                    font-size: 11pt;
                    color: #333;
                    margin: 0;
                    padding: 0;
                }

                .status-finalized {
                    color: #4CAF50;
                    font-weight: bold;
                }

                .status-not-finalized {
                    color: #FF9800;
                    font-weight: bold;
                }

                .info-note {
                    font-style: italic;
                }

                .question-block {
                    margin: 25px auto;
                    width: 80%;
                    max-width: 800px;
                    page-break-inside: avoid;
                }

                .question-header {
                    margin-bottom: 0;
                    padding-bottom: 0;
                }

                .answer {
                    margin-left: 25px;
                    padding: 10px 0 10px 15px;
                    border-left: 3px solid #e0e0e0;
                    margin-top: 0;
                }

                .question-number {
                    color: #000000; /* Changed from blue to black, removed bold */
                }

                .question-text {
                    color: #000000; /* Explicitly set to black, removed bold */
                }

                .rfp-info-table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-top: 15px;
                    border: 1px solid #BFBFBF;
                }

                .rfp-info-table td {
                    border: 1px solid #BFBFBF;
                    vertical-align: top;
                    padding: 5px 8px;
                }

                .rfp-info-table td.label-cell {
                    width: 150px;
                }
            </style>
        </head>
        <body>

            <div style="width: 80%; max-width: 800px; margin: 20px auto 10px auto; text-align: left;">
                <p class="info-note">*Note: Questions containing tables, along with those that have not been finalized, are excluded.</p>
                
                <table class="rfp-info-table">
                    <tr>
                        <td class="label-cell"><strong>Membership Activity</strong></td>
                        <td>{!IF(ISBLANK(membershipActivityName), 'Not Specified', membershipActivityName)}</td>
                    </tr>
                    <tr>
                        <td class="label-cell"><strong>Primary Consultant</strong></td>
                        <td>{!IF(ISBLANK(primaryConsultant), 'Not Specified', primaryConsultant)}</td>
                    </tr>
                    <tr>
                        <td class="label-cell"><strong>Generated By</strong></td>
                        <td>{!generatedByUserName}</td>
                    </tr>
                    <tr>
                        <td class="label-cell"><strong>Generated On</strong></td>
                        <td>{!generatedDateTime}</td>
                    </tr>
                    <!--<tr>
                        <td class="label-cell"><strong>Status</strong></td>
                        <td>
                            <span>Finalized questions ({!finalizedCount})</span>,
                            <span>Work In-Progress ({!notFinalizedCount})</span>
                        </td>
                    </tr>-->
                </table>
            </div>

            <apex:repeat value="{!questions}" var="qa">
                <div class="question-block">
                    <div class="question-header">
                        <span class="question-number">{!qa.RFP_Question_Number__c}.</span>
                        <span class="question-text">{!qa.RFP_Question__c}</span>
                    </div>
                    <br/>
                    <div class="answer">
                        {!IF(qa.IsFinalised__c, qa.Final_Answer__c, qa.Proposal_Gateway_Response__c)}
                    </div>
                </div>
            </apex:repeat>

        </body>
        </html>
    </apex:outputPanel>
</apex:page>