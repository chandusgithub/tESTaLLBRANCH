<aura:component >
    <aura:attribute name="helpLink" type="String"/>
    <aura:attribute name="helpText" type="String"/> 
    <aura:attribute name="iTag" type="String"/>
    <div class="slds-form-element form-tooltip" onmouseover="{!c.display}" onmouseout="{!c.displayOut}">
        <div class="slds-form-element__icon slds-align-middle">
            <button class="slds-button slds-button_icon" aria-describedby="help" title="" onclick="{!c.stopEvent}">
                <lightning:icon iconName="utility:info" size="xx-small" alternativeText="Help"/>
                <span class="slds-assistive-text">Help</span>
            </button>
        </div>
        <div class="slds-popover slds-popover--tooltip slds-nubbin_bottom slds-hide"  aria-label="Dialog Title" role="tooltip" id="help" style="position:absolute;" aura:id="tooltip" aria-describedby="dialog-body-id-263">
            <div class="slds-popover__body" id="dialog-body-id-263">
                <p class="slds-text-align_left">
                    <lightning:formattedRichText value="{!v.helpText}" />
                </p>
            </div>
        </div>
    </div>
    
    
</aura:component>