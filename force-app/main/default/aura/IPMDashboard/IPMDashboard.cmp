<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader,force:hasSObjectName" access="global" 
                controller="IPM_Dashboard_Controller">
    
    <aura:attribute name="options" type="List" default="[
                                                        {'label': 'Customer View', 'value': 'external'},
                                                        {'label': 'Executive Dashboard View', 'value': 'all'}
                                                        ]"/>
    <aura:attribute name="value" type="String" default=""/>
    <aura:attribute name="errorMsg" type="String" default=""/>
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    
    <div class="modal-header slds-modal__header">
        <h4 class="title slds-text-heading--medium" >Export IPM Dashboard</h4>
    </div>
    
    <div class="slds-modal__content slds-p-around--x-small slds-align_absolute-center slds-size_1-of-1 slds-is-relative" aura:id="modalbody" id="modalbody">
        <div class="" style="position:relative">
            <lightning:spinner aura:id="loadingSpinner" variant="brand" size="large" class="slds-hide" alternativeText="Loading"/>
            <lightning:radioGroup name="radioGroup"
                                  label="Choose either Customer View/Executive Dashboard View"
                                  options="{! v.options }"
                                  value="{! v.value }"
                                  type="radio"/>
            <div style="color:red">{!v.errorMsg}</div>
        </div>
        
    </div>
    
    <div class="modal-footer slds-modal__footer slds-size_1-of-1" style="overflow-y:hidden !important;
                                                                         height:unset !important;max-height:unset !important;
                                                                         ">
        <div class="forceChangeRecordTypeFooter">
            
            <lightning:button class="slds-button slds-button--brand"
                              label="Export" onclick="{!c.export}"/>
            <lightning:button class="slds-button slds-button--brand" label="Cancel" onclick="{! c.cancel}" /> 
        </div>
    </div>
    
</aura:component>