<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" controller='SpotLightReport'>
    
    <aura:attribute name="data" type="Object"/>
    <aura:attribute name="columns" type="List"/>
    <aura:attribute name="selectedRowsCount" type="Integer" default="0"/>
    <aura:attribute name="maxRowSelection" type="Integer" default="10"/>
    <aura:attribute name="selection" type="List" access="PRIVATE"/>
    <aura:attribute name="rowKeys" type="List" access="PRIVATE"/>
    <aura:attribute name="selectedRows" type="List" access="PRIVATE"/>
    <aura:attribute name="selectedRowId" type="String[]" access="PRIVATE"/>
    <aura:attribute name="showDownloadButton" type="Boolean" default="false" />
    <aura:attribute name="showMessage" type="Boolean" default="false" />
    
    <!-- handlers-->
    <aura:handler name="init" value="{! this }" action="{! c.init }"/>
    
    <article class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span class="slds-icon_container slds-icon-standard-account" title="account">
                        <span class="slds-assistive-text">Spotlight Report</span>
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                            <span>Spotlight Report</span>
                    </h2>
                </div>
                <aura:if isTrue="{!v.showDownloadButton}">
                    <div class="slds-no-flex">
                        <lightning:button label="Download Spotlight Report" title="Download Spotlight Report" onclick="{! c.downloadSpotLightReport }"/>
                    </div>
                </aura:if>
            </header>
        </div>
        <div class="slds-card__body slds-card__body_inner">
            <lightning:spinner aura:id="loadingSpinner" variant="brand" size="large" class="slds-hide" alternativeText="Loading"/>
            <lightning:datatable
                                 columns="{! v.columns }"
                                 data="{! v.data }"
                                 keyField="id"
                                 onrowselection="{! c.getSelectedValue }"
                                 resizeColumnDisabled="true"
                                 />
            <aura:if isTrue="{!v.showMessage}">
                <div  class="slds-section">
                    <div  class="slds-section" style="text-align: center;">
                        <b>
                            No Records found
                        </b>
                    </div>
                </div>
            </aura:if>
        </div>
    </article>
</aura:component>