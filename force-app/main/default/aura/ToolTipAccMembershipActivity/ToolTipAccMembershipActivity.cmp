<aura:component >
    <aura:attribute name="helpLink" type="String"/>
    <aura:attribute name="helpText" type="String"/>  
    <aura:attribute name="HelptTextSet" type="Set" default=""/> 
    <div class="slds-form-element" onmouseover="{!c.display}" onmouseout="{!c.displayOut}">
        <div class="slds-form-element__icon slds-align-middle">
            <button class="slds-button slds-button slds-button--icon" aria-describedby="help" title="" >
                <lightning:icon iconName="utility:info" size="xx-small" alternativeText="Help"/>
                <span class="slds-assistive-text">Help</span>
            </button>
        </div>
    </div>
    
    <section class="slds-popover slds-popover--tooltip slds-nubbin_right toggle help-tooltip"  aria-label="Dialog Title" role="tooltip" id="help" style="position:absolute;" aura:id="tooltip" aria-describedby="dialog-body-id-263">
        <div class="slds-popover__body" id="dialog-body-id-263">
            <p>{!v.helpText}</p>
        </div>
    </section>
</aura:component>