                                    </th>                                
                                    <aura:if isTrue="{!v.isParitalAccess || v.isEditAccess}">
                                        <th class="slds-is-sortable slds-is-resizable slds-text-title--caps" scope="col" style="width:5%"></th>
                                    </aura:if>                                                                
                                </tr>
                            </thead>                        
                            <tbody>                            
                                <aura:if isTrue="{!v.noRecords}">
                                    <tr>
                                        <aura:if isTrue="{!v.isParitalAccess || v.isEditAccess}">
                                            <th colspan="9">
                                                <div class="slds-text-align--center">{!$Label.c.Risk_Profile_No_Records}</div>
                                            </th>
                                            <aura:set attribute="else">
                                                <th colspan="8">
                                                    <div class="slds-text-align--center">{!$Label.c.Risk_Profile_No_Records}</div>
                                                </th>
                                            </aura:set>
                                        </aura:if>                                                                         
                                    </tr>
