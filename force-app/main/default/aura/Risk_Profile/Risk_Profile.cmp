<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" controller="RiskApexController">
    
    <aura:attribute name="riskProfileAccount" type="Account"/>
    
    <aura:attribute name="isDesktop" type="boolean" default="false"/>
    <aura:attribute name="isEditEnabled" type="boolean" default="false"/>
    
    <aura:attribute name="alertMesage" type="String"/>
    <aura:attribute name="networkErrorMesage" type="String" default="You are currently offline."/>
    <aura:attribute name="editIds" type="Object[]"/>
    <aura:attribute name="riskProfileList" type="RiskProfile__c[]"/>
    <aura:attribute name="riskProfileListNew" type="RiskProfile__c[]"/>
    <aura:attribute name="NewRiskRecord" type="String"/>
    <aura:attribute name="riskProfileAddRiskList" type="RiskProfile__c[]"/>
    
    <aura:attribute name="saveIds" type="Id[]"/>
    
    <aura:attribute name="isScrollStop" type="Boolean" default="true"/>
