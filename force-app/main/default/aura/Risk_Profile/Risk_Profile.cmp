            <div class="slds-card__header slds-grid slds-p-vertical--x-small slds-m-bottom--none appletHeader flex-auto" data-record="Risk_Profile" id="utilityToggle" onclick="{!c.expandCollapse}">
                <header class="slds-media slds-media--center">
                    <div class="slds-media__figure slds-grid slds-grid_vertical-align-center">
                        <button class="slds-button slds-text-body--regular action-bar-mobile" >
                            <lightning:icon class="icon-fallback-text sectionChevronIcon spin forceIcon" aura:id="utilityToggle" iconName="utility:chevronright" size="x-small" alternativeText="Product" />
                        </button>
                        
                        <div aura:id="appletIcon">
                            <span class="slds-icon_container slds-icon-standard-contact" title="description of icon when needed">
                                <lightning:icon class="slds-icon slds-icon--small" iconName="standard:account" size="small" alternativeText="Product" />
                            </span>
                        </div>                        
                        <div aura:id="spinner" class="slds-hide dotsSpinnerContainer slds-is-relative">
                            <div class="dotsSpinnerContent slds-is-relative slds-p-around_medium">
                                <span class="slds-assistive-text">Loading</span>
                                <div role="status" class="slds-spinner slds-spinner_brand slds-spinner_x-small">
                                    <div class="slds-spinner__dot-a"></div>
                                    <div class="slds-spinner__dot-b"></div>
                                </div>
                            </div>
                        </div>                           
                    </div>
                    <div class="">                        
                        <h2 class="slds-grid flex-alignCenter">                             
                            <span class="slds-text-heading--small">{!$Label.c.Risk_Profile}</span>
                            <div class="slds-is-relative flex-alignCenter helptext show-md-up slds-p-horizontal_x-small">
                                <!--<c:RiskProfileToolTip helpLink="Help" helpText="Risks Tracked by the SCE" RiskHelptTextSet="{!v.RiskHelptTextSet}"/>-->
                                <c:tooltip helpLink="Help" helpText="{!$Label.c.Risk_Profile_Header_Text}"/>
                            </div>
                        </h2>                                                
                    </div>                    
                </header>                
                <div class="slds-media__body appletAddBtn" style="text-align:right;">
                    <div class="slds-is-relative flex-alignCenter helptext show-md-down slds-p-horizontal_x-small">
                        <!--<c:RiskProfileToolTip helpLink="Help" helpText="Risks Tracked by the SCE" RiskHelptTextSet="{!v.RiskHelptTextSet}"/> -->
                        <c:tooltip helpLink="Help" helpText="{!$Label.c.Risk_Profile_Header_Text}"/>
                    </div>                                        
                    <aura:if isTrue="{!v.isDesktop}">
                        <div>
                            <aura:if isTrue="{!v.isParitalAccess || v.isEditAccess}">
                                <lightning:button class="slds-button slds-button--neutral" aura:id="addRiskProfile" onclick="{!c.addRiskProfile}">{!$Label.c.Add}</lightning:button>
                            </aura:if>                
                        </div>  
                        <aura:set attribute="else">
                            <div class="action-bar-mobile">
                                <aura:if isTrue="{!v.isParitalAccess || v.isEditAccess}">
                                    <lightning:button class="slds-button slds-button--neutral" aura:id="addRiskProfile" disabled="false" onclick="{!c.addRiskProfile}">{!$Label.c.Add}</lightning:button>
                                </aura:if>                
                            </div>
                        </aura:set>
                    </aura:if>                                                
                </div>                
            </div>
            
            <div class="slds-section__content " style="padding-top:0px;position:relative;">
                <div class="slds-card__body d-inline-block">
                    <div class="slds-page-header subHeaderHeight">                                        
                        <header class="slds-media slds-media--center HeaderContentAlign slds-float--right" style="padding-top:4px">  
                            <aura:if isTrue="{!v.isParitalAccess || v.isEditAccess}">                                    
                                <aura:if isTrue="{!v.isDesktop}">
                                    <div class="slds-media__body ButtonAlign" style="padding-bottom:3px">
                                        <lightning:button class="slds-button slds-button--neutral" aura:id="editRiskProfile" disabled="false" onclick="{!c.editRiskProfile}">{!$Label.c.Edit}</lightning:button>
                                        <lightning:button class="slds-button slds-button--neutral hideShow" aura:id="saveCancelButton" onclick="{!c.saveRiskProfile}">{!$Label.c.Save}</lightning:button>
                                        <lightning:button class="slds-button slds-button--neutral hideShow" aura:id="cancelRiskProfile" onclick="{!c.cancelRiskProfile}">{!$Label.c.Cancel}</lightning:button>                                                                                    
                                        <lightning:button class="slds-button slds-button--neutral" aura:id="UpdateReviewDate" disabled="false" onclick="{!c.UpdateReviewDate}">{!$Label.c.Risk_Profile_Update_Review_Date}</lightning:button>
                                    </div>
                                    <aura:set attribute="else">
                                        <div class="slds-media__body ButtonAlign" style="padding-bottom:3px">                                            
                                            <lightning:button class="slds-button slds-button--neutral action-bar-mobile" aura:id="editRiskProfile" disabled="false" onclick="{!c.editRiskProfile}">{!$Label.c.Edit}</lightning:button>
                                            <lightning:button class="slds-button slds-button--neutral hideShow action-bar-mobile" aura:id="saveCancelButton" onclick="{!c.saveRiskProfile}">{!$Label.c.Save}</lightning:button>
                                            <lightning:button class="slds-button slds-button--neutral hideShow action-bar-mobile" aura:id="cancelRiskProfile" onclick="{!c.cancelRiskProfile}">{!$Label.c.Cancel}</lightning:button>                                                                                    
                                            <lightning:button class="slds-button slds-button--neutral" aura:id="UpdateReviewDate" disabled="false" onclick="{!c.UpdateReviewDate}">{!$Label.c.Risk_Profile_Update_Review_Date}</lightning:button>
                                        </div>
                                    </aura:set>
                                </aura:if>
                            </aura:if>                                                         
                        </header>                            
                        
                    </div>      
                    <div class="subHeaderHeight RPBackground ">
                        <table class="slds-table slds-table--bordered slds-max-medium-table--stacked-horizontal slds-table--resizable-cols slds-table--fixed-layout">
                            <tr>
                                <th scope="row" class="slds-p-top--small slds-p-bottom--none slds-align_absolute-center slds-m-around_xxx-small">
                                    <label class="slds-p-right--small"><b>SCE Review Date</b></label>
                                    <ui:inputDate class="dateAlign1" format="M/d/yyyy" value="{!v.riskProfileAccount.SCEReviewedDate__c}" disabled="true"/>                                   
                                    <label for="overall-risk-score" class="slds-p-right--small slds-m-left--xx-small marginLabel"><b>{!$Label.c.Risk_Profile_Field_Overall_Risk_Score}</b></label>
                                    <ui:outputNumber class="RPSection1 slds-input--bare bold" value="{!v.riskProfileAccount.OverallRiskScore__c}" format="0.00"/>
                                </th>
                            </tr>
                        </table>                     
                    </div>                    
                    <ui:scrollerWrapper class="scrollerSize">
                        <table class="slds-table slds-table--bordered slds-max-medium-table--stacked-horizontal slds-table--resizable-cols slds-table--fixed-layout">
                            <thead>
                                <tr class="slds-text-title--caps">                                
                                    <th class="slds-is-resizable slds-text-title_caps" scope="col" style="padding:0.5rem 0.5rem;">                                    
                                        <span class="slds-assistive-text">Sort </span>
                                        <div class="slds-icon_container slds-grid slds-grid_vertical-align-center table-tooltip">  
                                            <span class="slds-cell-wrap" title="{!$Label.c.Risk_Profile_Col_Risks_Tracked_by_the_SCE}">{!$Label.c.Risk_Profile_Col_Risks_Tracked_by_the_SCE}</span>
                                            <div class="slds-is-relative slds-m-left_x-small">
                                            	<c:RiskProfileToolTip helpLink="Help" helpText="Risks Tracked by the SCE" RiskHelptTextSet="{!v.RiskHelptTextSet}"/>
                                            </div>
                                        </div>                                        
                                        <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>                                    
                                        <div class="slds-resizable">
                                            <label for="cell-resize-handle-1" class="slds-assistive-text">Name column width</label>
                                            <input type="range" min="20" max="1000" class="slds-resizable__input slds-assistive-text" id="cell-resize-handle-1" tabindex="0"/>                                       
                                        </div>                                       
                                    </th>
                                    <th class="slds-is-resizable slds-text-title_caps" scope="col" style="padding:0.5rem 0.5rem;width:8%">          
                                        <span class="slds-assistive-text">Sort </span>
                                        <span class="slds-cell-wrap" title="{!$Label.c.Risk_Profile_Col_Impact}">{!$Label.c.Risk_Profile_Col_Impact}</span>
                                        <div class="slds-icon_container">           
                                        </div>
                                        <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>                                    
                                        <div class="slds-resizable">
                                            <label for="cell-resize-handle-1" class="slds-assistive-text">Name column width</label>
                                            <input type="range" min="20" max="1000" class="slds-resizable__input slds-assistive-text" id="cell-resize-handle-1" tabindex="0"/>                                       
                                        </div>
                                    </th>
                                    <th class="slds-is-resizable slds-text-title_caps" width="150" scope="col" style="padding:0.5rem 0.5rem">
                                        <span class="slds-assistive-text">Sort </span>
                                        <span class="slds-cell-wrap" title="{!$Label.c.Risk_Profile_Col_Additional_Information}">{!$Label.c.Risk_Profile_Col_Additional_Information}</span>
                                        <div class="slds-icon_container">           
                                        </div>
                                        <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>                                    
                                        <div class="slds-resizable">
                                            <label for="cell-resize-handle-1" class="slds-assistive-text">Name column width</label>
                                            <input type="range" min="20" max="1000" class="slds-resizable__input slds-assistive-text" id="cell-resize-handle-1" tabindex="0"/>                                        
                                        </div>
                                    </th>
                                    <th class="slds-is-resizable slds-text-title_caps" scope="col" style="padding:0.5rem 0.5rem;">         
                                        <span class="slds-assistive-text">Sort </span>
                                        <span class="slds-cell-wrap" title="{!$Label.c.Risk_Profile_Col_Comments}">{!$Label.c.Risk_Profile_Col_Comments}</span>
                                        <div class="slds-icon_container">           
                                        </div>
                                        <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>                                    
                                        <div class="slds-resizable">
                                            <label for="cell-resize-handle-1" class="slds-assistive-text">Name column width</label>
                                            <input type="range" min="20" max="1000" class="slds-resizable__input slds-assistive-text" id="cell-resize-handle-1" tabindex="0"/>                                       
                                        </div>
                                    </th>
                                    <th class="slds-is-resizable slds-text-title_caps" scope="col" style="padding:0.5rem 0.5rem;width:8%">
                                        <span class="slds-assistive-text">Sort </span>
                                        <span class="slds-cell-wrap" title="{!$Label.c.Risk_Profile_Col_Date_Risk_Added}">{!$Label.c.Risk_Profile_Col_Date_Risk_Added}</span>
                                        <div class="slds-icon_container">           
                                        </div>
                                        <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>                                    
                                        <div class="slds-resizable">
                                            <label for="cell-resize-handle-1" class="slds-assistive-text">Name column width</label>
                                            <input type="range" min="20" max="1000" class="slds-resizable__input slds-assistive-text" id="cell-resize-handle-1" tabindex="0"/>                                       
                                        </div>
                                    </th>
                                    <th class="slds-is-resizable slds-text-title_caps" scope="col" style="padding:0.5rem 0.5rem;width:8%">                                    
                                        <span class="slds-assistive-text">Sort </span>
                                        <span class="slds-cell-wrap" title="{!$Label.c.Risk_Profile_Col_Date_Risk_Modified}">{!$Label.c.Risk_Profile_Col_Date_Risk_Modified}</span>
                                        <div class="slds-icon_container">           
                                        </div>
                                        <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>                                    
                                        <div class="slds-resizable">
                                            <label for="cell-resize-handle-1" class="slds-assistive-text">Name column width</label>
                                            <input type="range" min="20" max="1000" class="slds-resizable__input slds-assistive-text" id="cell-resize-handle-1" tabindex="0"/>                                        
                                        </div>
                                    </th>
                                    <th class="slds-is-resizable slds-text-title_caps" scope="col" style="padding:0.5rem 0.5rem;width: 14%;">                                    
                                        <span class="slds-assistive-text">Sort </span>
                                        <span class="slds-cell-wrap" title="{!$Label.c.Risk_Profile_Col_Date_Risk_Closed}">{!$Label.c.Risk_Profile_Col_Date_Risk_Closed}</span>
                                        <div class="slds-icon_container">           
                                        </div>
                                        <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>                                    
                                        <div class="slds-resizable">
                                            <label for="cell-resize-handle-1" class="slds-assistive-text">Name column width</label>
                                            <input type="range" min="20" max="1000" class="slds-resizable__input slds-assistive-text" id="cell-resize-handle-1" tabindex="0"/>                                       
                                        </div>
                                    </th>
                                    <th class="slds-is-resizable slds-text-title_caps" scope="col" style='width:8%;padding:0.5rem 0.5rem;width:6%'>                                    
                                        <span class="slds-assistive-text">Sort </span>
                                        <span class="slds-cell-wrap" title="{!$Label.c.Risk_Profile_Col_Risk_Score}">{!$Label.c.Risk_Profile_Col_Risk_Score}</span>
                                        <div class="slds-icon_container">           
                                        </div>
                                        <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>                                    
                                        <div class="slds-resizable">
                                            <label for="cell-resize-handle-1" class="slds-assistive-text">Name column width</label>
                                            <input type="range" min="20" max="1000" class="slds-resizable__input slds-assistive-text" id="cell-resize-handle-1" tabindex="0"/>                                       
