<aura:component >   
    <aura:attribute name="isEditAccess" type="Boolean" default="true"/>
    <aura:attribute name="isContact" type="boolean"/>
    <aura:attribute name="isEditable" type="boolean" default="true"/>
    <aura:attribute name="RolePicklist" type="String[]"/>
    <aura:registerEvent name="IndividualPolicyChildEvent" type="c:IndividualPolicyChildEvent"/>
    <aura:attribute name="PolicyObject" type="Policycase__c"/>
   
    <tr class="slds-hint-parent">
       
        <th scope="row" data-label="Name">
            <div class="slds-truncate" title="">{!v.PolicyObject.Policy__r.Name}</div>
        </th> 
         <th scope="row" data-label="Policy Number">
            <div class="slds-truncate slds-p-left_x-large" title="">{!v.PolicyObject.Policy__r.Policy__c}</div>
        </th>  
         <th scope="row" data-label="Policy Type">
            <div class="slds-truncate" title="">{!v.PolicyObject.Policy__r.Policy_Type__c}</div>
        </th> 
         <aura:if isTrue="{!v.isEditAccess}">
                    <th scope="row" class="data-del">
                        <div aura:id="deleteIcon" class="slds-truncate" onclick="{!c.removeCasePolicy}" title="Delete">
                            <button class="slds-button slds-text-body--regular">
                                <lightning:icon class="slds-icon slds-icon--small" iconName="utility:delete" size="x-small" alternativeText="Product" />
                            </button>
                        </div>
                        <div aura:id="spinner" class="slds-hide dotsSpinnerContainer">
                            <div class="dotsSpinnerContent slds-is-relative slds-p-around_medium">
                                <span class="slds-assistive-text">Loading</span>
                                <div role="status" class="slds-spinner slds-spinner_brand slds-spinner_x-small">                                
                                    <div class="slds-spinner__dot-a"></div>
                                    <div class="slds-spinner__dot-b"></div>
                                </div>
                            </div>
                        </div>
                    </th>
                </aura:if>
    </tr>
</aura:component>