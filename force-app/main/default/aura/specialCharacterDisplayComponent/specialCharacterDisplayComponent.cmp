<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" controller="SpecialCharacterBatchMetadataQuery" >
    <aura:attribute name="metadataRecordName" type="String[]" />
    <aura:attribute name="objectName" type="String" />
    <aura:attribute name="NoRecords" type="String" />
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    <article class="slds-card">
        <div class="slds-card__header slds-grid">
            <header class="slds-media slds-media_center slds-has-flexi-truncate">
                <div class="slds-media__figure">
                    <span class="slds-icon_container slds-icon-standard-account" title="account">
                        <span class="slds-assistive-text">Search Special Character</span>
                    </span>
                </div>
                <div class="slds-media__body">
                    <h2 class="slds-card__header-title">
                        <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="Accounts">
                            <span class="slds-text-heading_small">Search Special Character</span>
                        </a>
                    </h2>
                </div>
                <div aura:id="spinner" class="slds-hide dotsSpinnerContainer slds-is-relative"> 
                    <div class="dotsSpinnerContent slds-is-relative slds-p-around_medium">
                        <span class="slds-assistive-text">Loading</span>
                        <div role="status" class="slds-spinner slds-spinner_brand slds-spinner_x-small">                                
                            <div class="slds-spinner__dot-a"></div>
                            <div class="slds-spinner__dot-b"></div>
                        </div>
                    </div>
                </div>
            </header>
        </div>
        <div class="slds-card__body slds-card__body_inner">
            <ui:inputSelect class="slds-form-control" aura:id="object" multiple="false" change="{!c.onSelectRoleChangeFunction}" >
                <aura:iteration items="{!v.metadataRecordName}" var="mdtrecName">                                    
                    <ui:inputSelectOption class="slds-cell-wrap" text="{!mdtrecName}"/> 
                </aura:iteration>
            </ui:inputSelect>
        </div>
        <span>{!v.NoRecords}</span>
        <footer class="slds-card__footer">
            <lightning:button class="slds-button slds-button--neutral" title="Download" onclick="{!c.download}">Download</lightning:button>
        </footer>
    </article>
</aura:component>