<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" 
                access="global" 
                controller="ETSBECase">
    <aura:attribute name="ETSBEdata" type="String[]"/>
    <aura:attribute name="isEmpty" type="Boolean" default="false"/>
    <aura:attribute name="sortRecordTypeAsc" type="Boolean" default="true"/>
    <aura:attribute name="sortStatusAsc" type="Boolean" default="true"/>
    <aura:attribute name="sortAssignedToAsc" type="Boolean" default="true"/>
    <aura:attribute name="sortField" type="String" default="CreatedDate"/>
    <aura:attribute name="sortOrder" type="String" default="ASC"/>
    <aura:attribute name="FilesCount" type="Integer"/> 
    <aura:attribute name='page' type='Integer' />
    <aura:attribute name='pages' type='Integer' />
    <aura:attribute name='total' type='Integer' />
    <aura:attribute name='defaultId' type='String' />
    <aura:attribute name="options" type="Object[]"/>
    <aura:attribute name="caseRecordTypeList" type="String[]"/>
    <aura:handler name="pageChange" event="c:PageChange" action="{!c.pageChange}"/>
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/>
    <aura:attribute name="recordTypeId" type="String"/>
    <div aura:id="recordTypeModal" class="slds-hide" style="height: 640px;position:absolute">
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <button class="slds-button slds-button_icon slds-modal__close slds-button_icon-inverse" title="Close" onclick="{!c.CloseRecordTypeModal}">
                        <lightning:icon iconName="utility:close" size="x-small" alternativeText="Indicates approval"/>
                        <span class="slds-assistive-text">Close</span>
                    </button>
                    <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">New Issue</h2>
                </header>
                <div class="slds-modal__content slds-p-around_medium slds-grid slds-radio slds-p-bottom_x-small" id="modal-content-id-1">
                    <div class="slds-size_1-of-2 slds-medium-size_1-of-2 slds-large-size_1-of-2 slds-p-right_medium slds-text-align_right">
                        <legend class="form-element__legend slds-form-element__label">Record Type : </legend>
                    </div>
                    <div class="slds-form-element__control slds-size_1-of-2 slds-medium-size_1-of-2 slds-large-size_1-of-2 slds-radio slds-p-bottom_x-small ">
                        <lightning:radioGroup class="slds-radio slds-p-bottom_x-small record-type" aura:id="mygroup" name="radioButtonGroup" onchange="{!c.handleChange}" options="{!v.options}" value="{!v.defaultId}" style='display: contents;'/>
                    </div>
                </div>
                <footer class="slds-modal__footer">
                    <button class="slds-button slds-button_neutral" onclick="{!c.CloseRecordTypeModal}">Cancel</button>
                    <button class="slds-button slds-button_brand" onclick="{!c.createCaseRecord}">Next</button>
                </footer>
            </div>
        </section>
        <div aura:id="recordTypeModal" class="slds-backdrop slds-backdrop_open slds-hide"></div>
    </div>
    <article style="border: 1px solid rgb(221, 219, 218);" class="slds-card">
        <div style="padding-top:0px;position:relative;">
            <div class="slds-spinner_container slds-hide" aura:id="userLoadingspinner">
                <div class="slds-spinner--brand  slds-spinner slds-spinner--medium slds-is-relative loading-Position" role="status">
                    <span class="slds-assistive-text">{!$Label.c.Loading}</span>
                    <div class="slds-spinner__dot-a"></div>
                    <div class="slds-spinner__dot-b"></div>
                </div>
            </div>  
            <div class="slds-card__header slds-grid">
                <header class="slds-media slds-media_center slds-has-flexi-truncate slds-p-horizontal_medium">
                    <!--<div class="slds-media__figure">
                        <span class="slds-icon_container slds-icon-standard-account" title="account">
                            <span class="slds-assistive-text">Account</span>
                        </span>
                    </div>-->
                    <div class="slds-media__body">
                        <h2 class="slds-card__header-title">
                            <lightning:icon iconName="standard:case" size="small" alternativeText="Indicates approval"/>
                            <a href="javascript:void(0);" style="padding: 10px;" class="slds-card__header-link slds-truncate" title="Accounts">
                                <span class="slds-text-heading_small">Issue ({!v.FilesCount})</span>
                            </a>
                        </h2>
                    </div>
                    <div class="slds-align_absolute-right">
                        <button class="slds-button slds-button--neutral" onclick="{!c.newButtonOnclick}">New</button>
                    </div>
                </header>
            </div>
            <div class="slds-card__body slds-card__body_inner slds-m-bottom_none">
                <ui:inputSelect aura:id="focusInputField" class="slds-hide"/>
                <table class="slds-table slds-table_bordered slds-max-medium-table_stacked-horizontal data-table">
                    <thead>
                        <tr class="slds-text-title_caps">
                            <th scope="col">
                                <div class="slds-truncate" title="Issue ID">Issue ID
                                    <button class="slds-button slds-button_icon slds-button_icon" title="Sort">                                        
                                        <span class="slds-assistive-text">Sort</span>
                                    </button>
                                </div>
                            </th>
                            <th class="slds-is-sortable slds-is-resizable slds-text-title--caps" scope="col">
                                <a onclick="{!c.sortFields}" data-record="RecordType.Name" class="slds-th__action slds-text-link--reset sort-link" tabindex="0" style="display: inline-block;">
                                    <span class="slds-assistive-text">{!$Label.c.Sort} </span>
                                    <span class="" title="Record Type">Record Type</span>
                                    <div class="slds-icon_container">
                                        <aura:if isTrue="{!v.sortRecordTypeAsc}">
                                            <lightning:icon class="slds-icon slds-icon--x-small slds-icon-text-default slds-is-sortable__icon" iconName="utility:arrowdown" size="xx-small" alternativeText="Indicates approval"/>
                                            <aura:set attribute="else">
                                                <lightning:icon class="slds-icon slds-icon--x-small slds-icon-text-default slds-is-sortable__icon" iconName="utility:arrowup" size="xx-small" alternativeText="Indicates approval"/>
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                    <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>
                                </a>
                                
                            </th>
                            <th scope="col">
                                <div class="slds-truncate" title="Category">Category
                                    <button class="slds-button slds-button_icon slds-button_icon" title="Sort">
                                        
                                        <span class="slds-assistive-text">Sort</span>
                                    </button>
                                </div>
                            </th>
                            
                            <th scope="col">
                                <div class="slds-truncate" title="Sub-Category">Sub-Category
                                    <button class="slds-button slds-button_icon slds-button_icon" title="Sort">                                        
                                        <span class="slds-assistive-text">Sort</span>
                                    </button>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate" title="Priority ">Priority 
                                    <button class="slds-button slds-button_icon slds-button_icon" title="Sort">                                        
                                        <span class="slds-assistive-text">Sort</span>
                                    </button>
                                </div>
                            </th>
                            <th scope="col">
                                <div class="slds-truncate" title="Subject">Subject
                                    <button class="slds-button slds-button_icon slds-button_icon" title="Sort">                                        
                                        <span class="slds-assistive-text">Sort</span>
                                    </button>
                                </div>
                            </th>
                           <th class="slds-is-sortable slds-is-resizable slds-text-title--caps" scope="col">
                                <a onclick="{!c.sortFields}" data-record="Status" class="slds-th__action slds-text-link--reset sort-link" tabindex="0" style="display: inline-block;">
                                    <span class="slds-assistive-text">{!$Label.c.Sort} </span>
                                    <span class="" title="Status">Status</span>
                                    <div class="slds-icon_container">
                                        <aura:if isTrue="{!v.sortStatusAsc}">
                                            <lightning:icon class="slds-icon slds-icon--x-small slds-icon-text-default slds-is-sortable__icon" iconName="utility:arrowdown" size="xx-small" alternativeText="Indicates approval"/>
                                            <aura:set attribute="else">
                                                <lightning:icon class="slds-icon slds-icon--x-small slds-icon-text-default slds-is-sortable__icon" iconName="utility:arrowup" size="xx-small" alternativeText="Indicates approval"/>
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                    <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>
                                </a>
                                
                            </th>
                            <th scope="col">
                                <div class="slds-truncate" title="Age">Age
                                    <button class="slds-button slds-button_icon slds-button_icon" title="Sort">                                        
                                        <span class="slds-assistive-text">Sort</span>
                                    </button>
                                </div>
                            </th>
                            <th class="slds-is-sortable slds-is-resizable slds-text-title--caps" scope="col">
                                <a onclick="{!c.sortFields}" data-record="Owner.Name" class="slds-th__action slds-text-link--reset sort-link" tabindex="0" style="display: inline-block;">
                                    <span class="slds-assistive-text">{!$Label.c.Sort} </span>
                                    <span class="" title="Assigned To">Assigned To</span>
                                    <div class="slds-icon_container">
                                        <aura:if isTrue="{!v.sortAssignedToAsc}">
                                            <lightning:icon class="slds-icon slds-icon--x-small slds-icon-text-default slds-is-sortable__icon" iconName="utility:arrowdown" size="xx-small" alternativeText="Indicates approval"/>
                                            <aura:set attribute="else">
                                                <lightning:icon class="slds-icon slds-icon--x-small slds-icon-text-default slds-is-sortable__icon" iconName="utility:arrowup" size="xx-small" alternativeText="Indicates approval"/>
                                            </aura:set>
                                        </aura:if>
                                    </div>
                                    <span class="slds-assistive-text" aria-live="assertive" aria-atomic="true"></span>
                                </a>                                
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <aura:if isTrue="{!v.isEmpty}">
                            <tr>
                                <th colspan="9">
                                    <div class="slds-text-align--center">No ETS-BE Request Case Associated With This Account</div>
                                </th>
                            </tr>
                            <aura:set attribute="else"> 
                                <aura:iteration items="{!v.ETSBEdata}" var="obj">
                                    <tr class="slds-hint-parent">
                                        <td scope="row" data-label="Issue ID">
                                            <div class="slds-truncate" title="{!obj.CaseNumber}">
                                                <a class="slds-truncate" tabindex="0" onclick="{!c.navigateToIssueDetailPage}" data-record="{!obj.Id}" title="{!obj.CaseNumber}">{!obj.CaseNumber}</a>
                                            </div>
                                        </td>
                                        <td data-label="Record Type">
                                            <div class="slds-truncate" title="{!obj.RecordType.Name}">
                                                {!obj.RecordType.Name}
                                            </div>
                                        </td>
                                        <td data-label="Category">
                                            <div class="slds-truncate" title="{!obj.Category__c}">
                                                {!obj.Category__c}
                                            </div>
                                        </td>
                                        <td data-label="Sub-Category">
                                            <div class="slds-truncate" title="{!obj.Sub_Category__c}">
                                                {!obj.Sub_Category__c}
                                            </div>
                                        </td>
                                        <td data-label="Priority">
                                            <div class="slds-truncate" title="{!obj.Priority}">
                                                {!obj.Priority}
                                            </div>
                                        </td>
                                        <td data-label="Subject">
                                            <div class="slds-truncate" title="{!obj.Subject}">
                                                {!obj.Subject}
                                            </div>
                                        </td>
                                        <td data-label="Status">
                                            <div class="slds-truncate" title="{!obj.Status}">
                                                {!obj.Status}
                                            </div>
                                        </td>
                                        <td data-label="Age">
                                            <div class="slds-truncate" title="{!obj.Age__c}">
                                                {!obj.Age__c}
                                            </div>
                                        </td>
                                        <td data-label="Assigned To">
                                            <div class="slds-truncate" title="{!obj.Owner.Name}">
                                                {!obj.Owner.Name}
                                            </div>
                                        </td>
                                        
                                    </tr>
                                </aura:iteration>
                            </aura:set>
                        </aura:if>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="slds-p-horizontal_medium">
        	<c:Pagination page="{!v.page}" pages="{!v.pages}" total="{!v.total}"/>
        </div>
    </article>
</aura:component>