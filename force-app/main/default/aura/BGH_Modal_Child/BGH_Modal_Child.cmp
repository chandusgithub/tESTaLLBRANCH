<aura:component >
    <aura:attribute name="businessGroupsobj" type="Account"/>
    <aura:attribute name="BGHId" type="Id"/>
    <aura:attribute name="selectedBGH" type="Boolean" />    
    <aura:registerEvent name="BGHChildEvent" type="c:BGHChildEvent"/>
    
        <td class="">
            <form class="slds-form--inline">
                <div class="slds-form-element w-100">
                    <div class="slds-form-element__control w-100">
                        <div class="slds-grid">
                            <div class="slds-grid slds-grid--vertical-align-start chk-box-container w-100">
                                <ui:inputCheckbox aura:id="BGHcheckbox" change="{!c.Select}"/>
                                <label class="slds-checkbox__label alignBghName">
                                    <span class="slds-checkbox--faux"></span>
                                    <span class="slds-form-element__label">{!v.businessGroupsobj.Name}</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </td>
</aura:component>