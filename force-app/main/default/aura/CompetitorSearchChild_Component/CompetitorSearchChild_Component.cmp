<aura:component >
    <aura:registerEvent name="ProductSearchComp" type="c:ProductSearch_Component_Event"/>
    <aura:attribute name="competitorList" type="Object"/>
    <aura:attribute name="productType" type="String"/>
    
    <aura:attribute name="otherEnable" type="Boolean" default="true"/>
    <aura:attribute name="medicalEnable" type="Boolean" default="true"/>
    <aura:attribute name="othersEnable" type="Boolean" default="true"/>
    
    <aura:handler name="init" action="{!c.doInit}" value="{!this}"/> 
    <aura:method name="deSelectCheckBox" action="{!c.removeSelectedValue}"  description="Sample method with parameters"> 
        <aura:attribute name="isProductsSelected" type="Boolean"/>
        <aura:attribute name="prodCat" type="Boolean"/> 
    </aura:method>
    <tr>
        <th scope="row" class="text-wrap" width="700" data-label="{!v.competitorList.Name}">
            <div title="">{!v.competitorList.Name}</div>
        </th>
        <aura:if isTrue="{!v.productType != 'Medical and Others'}">
            <th width="500" scope="row" data-label="{!v.competitorList.Name}" class="slds-text-align_center">
                <div class="slds-checkbox_add-button">
                    <ui:inputCheckbox aura:id="selectedProductId" disabled="{!v.otherEnable}"  change="{!c.onProductSelect}">
                    <aura:set attribute="name" value="{!v.productType}"/>
                    </ui:inputCheckbox>
                    <label for="add-checkbox-17" class="slds-checkbox_faux"><span class="slds-assistive-text">Select item 1</span></label>
                </div>
            </th>
            <aura:set attribute="else">         
                <th scope="row" data-label="{!v.competitorList.Name}" class="slds-text-align_center">
                    <div class="slds-checkbox_add-button">
                        <ui:inputCheckbox aura:id="selectedProductIdMed" disabled="{!v.medicalEnable}" change="{!c.onProductSelect}">
                        <aura:set attribute="name" value="Medical"/>
                        </ui:inputCheckbox>
                        <label for="add-checkbox-17" class="slds-checkbox_faux"><span class="slds-assistive-text">Select item 1</span></label>
                    </div>
                </th>
                <th scope="row" data-label="{!v.competitorList.Name}" class="slds-text-align_center">
                    <div class="slds-checkbox_add-button">
                        <ui:inputCheckbox aura:id="selectedProductIdOth" disabled="{!v.othersEnable}" change="{!c.onProductSelect}">
                        <aura:set attribute="name" value="Other"/>
                        </ui:inputCheckbox>
                        <label for="add-checkbox-17" class="slds-checkbox_faux"><span class="slds-assistive-text">Select item 1</span></label>
                    </div>
                </th>
            </aura:set>
        </aura:if>
    </tr>
</aura:component>