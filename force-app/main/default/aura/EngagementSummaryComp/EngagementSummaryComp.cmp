<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,force:hasRecordId,force:lightningQuickActionWithoutHeader" access="global">
    <aura:attribute name="recordId" type="String"/>
    
    <!-- Add CSS styles -->
    <aura:html tag="style">
        .heading {
            font-family: 'Arial', sans-serif;
            font-size: 20px;
            font-weight: bold;
        }
        .warning-message {
            font-size: 18px;
            
        }
        .note-message {
            font-size: 16px;
            margin-top: 30px;
        font-weight: bold;
        
        }
        .slds-modal__close {
            position: absolute;
            top: 1rem;
            right: 1rem;
        }
    </aura:html>
    
    <section role="dialog" tabindex="-1" aria-modal="true" aria-labelledby="modal-heading-01" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container" style="width:100%">
            <div class="slds-modal__header">
                
                <h1 id="modal-heading-01" class="slds-modal__title slds-hyphenate" tabindex="-1">Publish all Training Sessions</h1>
            </div>
            <div class="slds-modal__content slds-p-around_medium" style="height:150px">
                
                <p class="warning-message">Note : This action will send details of the Training Sessions under this Training Program to all selected participants and trainers, and log it on their calendars.</p>
                <p class="note-message">Please confirm to publish all Training Sessions.</p>
            </div>
            <div class="slds-modal__footer">
                <button class="slds-button slds-button_neutral" aria-label="Cancel and close" onclick="{!c.closeModal}">Cancel</button>
                <button class="slds-button slds-button_brand" onclick="{!c.publishTrainingSessions}">Publish</button>
            </div>
        </div>
    </section>
</aura:component>